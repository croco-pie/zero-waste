<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="100" author="crocopie">
        <createTable schemaName="zero_waste" tableName="waste">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="waste_id_pk"/>
            </column>
            <column name="code_num" type="varchar">
                <constraints nullable="false" unique="true" uniqueConstraintName="code_num_unq"/>
            </column>
            <column name="code_name" type="varchar"/>
            <column name="code_id" type="uuid">
                <constraints  nullable="false"/>
            </column>
            <column name="code_description" type="varchar">
                <constraints  nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>